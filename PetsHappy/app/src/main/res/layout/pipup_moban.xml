<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.05"
        android:background="@drawable/popup_window_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x30"
            android:text="联系TA"
            android:textSize="@dimen/x50" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#44000000" />

        <Button
            android:id="@+id/user_cancel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:onClick="click"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:text="拨打电话"
            android:textColor="#057CFF"
            android:textSize="@dimen/x40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#44000000" />

        <Button
            android:id="@+id/user_cancel_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:onClick="click"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:text="发送消息"
            android:textColor="#057CFF"
            android:textSize="@dimen/x40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#44000000" />

        <Button
            android:id="@+id/user_cancel_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:onClick="click"
            android:paddingBottom="@dimen/x2"
            android:paddingTop="@dimen/x2"
            android:text="取消"
            android:textColor="#057CFF"
            android:textSize="@dimen/x40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#44000000" />

    </LinearLayout>

</LinearLayout>